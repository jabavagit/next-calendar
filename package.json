{
  "name": "nextjs-calendar-dashboard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run cache:clean && next dev",
    "build": "next build",
    "start": "next start",
    "build:start": "npm run build && npm run start",
    "lint": "eslint --config .config/eslint/eslint.config.mjs src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --config .config/prettier/.prettierrc --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:lint": "npm run format && npm run lint",
    "cache:clean": "rm -rf .next",
    "prepareOld": "rm -rf .husky && cp -r .config/husky .husky",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "autoprefixer": "^10.4.21",
    "dexie": "^4.0.11",
    "next": "15.3.3",
    "next-pwa": "^5.6.0",
    "postcss": "^8.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-select": "^5.10.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-select": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "daisyui": "^5.0.43",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.8",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --config .config/prettier/.prettierrc --write",
      "eslint --config .config/eslint/eslint.config.mjs --fix"
    ]
  }
}